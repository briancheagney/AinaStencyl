class Design_25_25 extends ActorScript
{
	public var _Pressed:Bool;
	public var _SizeW:Float;
	public var _SizeH:Float;
	
	
	public function new(dummy:Int, actor:Actor, dummy2:Engine)
	{
		super(actor);
		nameMap.set("Actor", "actor");
		nameMap.set("Pressed", "_Pressed");
		_Pressed = false;
		nameMap.set("SizeW", "_SizeW");
		_SizeW = 0.0;
		nameMap.set("SizeH", "_SizeH");
		_SizeH = 0.0;
		
	}
	
	override public function init()
	{
		
		/* ======================== When Creating ========================= */
		actor.growTo(Engine.engine.getGameAttribute("SmallButtonSize")/100, Engine.engine.getGameAttribute("SmallButtonSize")/100, 0, Linear.easeNone);
		_Pressed = false;
		propertyChanged("_Pressed", _Pressed);
		_SizeH = asNumber(100);
		propertyChanged("_SizeH", _SizeH);
		_SizeW = asNumber(100);
		propertyChanged("_SizeW", _SizeW);
		
		/* =========================== On Actor =========================== */
		addMouseOverActorListener(actor, function(mouseState:Int, list:Array<Dynamic>):Void
		{
			if(wrapper.enabled && 3 == mouseState)
			{
				_Pressed = true;
				propertyChanged("_Pressed", _Pressed);
			}
		});
		
		/* ======================== When Updating ========================= */
		addWhenUpdatedListener(null, function(elapsedTime:Float, list:Array<Dynamic>):Void
		{
			if(wrapper.enabled)
			{
				if((_Pressed == true))
				{
					_Pressed = false;
					propertyChanged("_Pressed", _Pressed);
					actor.growTo((.9 * Engine.engine.getGameAttribute("SmallButtonSize"))/100, (.9 * Engine.engine.getGameAttribute("SmallButtonSize"))/100, .25, Linear.easeNone);
					_Pressed = false;
					propertyChanged("_Pressed", _Pressed);
					runLater(1000 * .25, function(timeTask:TimedTask):Void
					{
						actor.growTo(Engine.engine.getGameAttribute("SmallButtonSize")/100, Engine.engine.getGameAttribute("SmallButtonSize")/100, .1, Linear.easeNone);
					}, actor);
				}
			}
		});
		
	}
	
	override public function forwardMessage(msg:String)
	{
		
	}
}